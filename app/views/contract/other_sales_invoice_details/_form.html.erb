<%= form_for([@other_sales_invoice_header, @other_sales_invoice_detail], :html => { :class => "form-horizontal" }, :remote => true) do |f| %>
  <% if @other_sales_invoice_detail.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@other_sales_invoice_detail.errors.count, "error") %> prohibited this other_sales_invoice_detail from being saved:</h2>

      <ul>
      <% @other_sales_invoice_detail.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="row-fluid">
    <div class="span6">
      <div class="control-group">
        <%= f.label :description, "#{t 'description'}", :class => "control-label" %>
        <div class="controls"><%= f.text_field :description %></div>
      </div>      
      
      <div class="control-group">
        <%= f.label :quantity, "#{t 'quantity'}", :class => "control-label" %>
        <div class="controls"><%= f.text_field :quantity, :style => "text-align:right" %></div>
      </div>      

      <div class="control-group">
        <%= f.label :price, "#{t 'price'}", :class => "control-label" %>
        <div class="controls"><%= f.text_field :price, :style => "text-align:right" %></div>
      </div>        

      <div class="control-group">
        <%= f.label :discount_item, "#{t 'disc'}", :class => "control-label" %>
        <% if @other_sales_invoice_detail.discount_item.present? %>
          <div class="controls"><%= f.text_field :discount_item, :readonly => false, :style => "text-align:right" %></div>
        <% else %>
          <div class="controls"><%= f.text_field :discount_item, :value => 0, :readonly => false, :style => "text-align:right" %></div>
        <% end %>
      </div>   
      
      <div class="control-group">
        <%= f.label :discount_item_price, "#{t 'disc_rp'}", :class => "control-label" %>
        <% if @other_sales_invoice_detail.discount_item_price.present? %>
          <div class="controls"><%= f.text_field :discount_item_price, :readonly => false, :style => "text-align:right" %></div>
        <% else %>
          <div class="controls"><%= f.text_field :discount_item_price, :value => 0, :readonly => false, :style => "text-align:right" %></div>
        <% end %>
      </div>

      <div class="control-group">
        <div class="controls"><%= f.submit "#{t 'submit'}", :class => "btn" %></div>
      </div>   
    </div>
  </div>
<% end %>
