<%= form_for([@sales_quotation_header, @sales_quotation_detail], :html => { :class => "form-horizontal" }, :remote => true) do |f| %>
  <% if @sales_quotation_detail.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@sales_quotation_detail.errors.count, "error") %> prohibited this sales_quotation_detail from being saved:</h2>

      <ul>
      <% @sales_quotation_detail.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="control-group">
    <%= f.label :category, "#{t 'category'}", :class => "control-label" %>
    <div class="controls">
      <%= f.text_field :category, :required => true %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :description, "#{t 'description'}", :class => "control-label" %>
    <div class="controls">
      <%= f.text_field :description %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :unit_of_measure_id, "#{t 'unit_of_measure'}", :class => 'control-label' %>
    <div class="controls">
      <%= f.select :unit_of_measure_id, @uoms.collect {|uom| [uom.name, uom.id,]}, {:prompt => "#{t 'prompt'} #{t 'unit_of_measure'}"}, :required => true, :id => "detail_uom_conv" %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :quantity, "#{t 'quantity'}", :class => "control-label" %>
    <div class="controls">
      <%= f.text_field :quantity, :required => true, :class => "text-right" %>
    </div>
  </div>
  
  <div class="actions", align="right">
    <%= f.submit "#{t 'submit'}", :class => "btn" %>
  </div>
<% end %>
